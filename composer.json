{
  "name":        "yapro/symfony-http-client-ext",
  "description": "Converts the current / specified Symfony http request to a curl command.",
  "type":        "library",
  "keywords":    ["php", "symfony", "library", "http", "extensions"],
  "homepage":    "http://yapro.ru",
  "license":     "MIT",

  "authors": [
    {
      "name": "Lebedenko Nikolay",
      "email": "totx@ya.ru",
      "homepage": "http://yapro.ru"
    }
  ],

  "require": {
    "php": ">=7.4",
    "symfony/http-client": "*",
    "symfony/http-client-contracts": "*",
    "yapro/helpers": "*"
  },

  "require-dev": {
    "phpunit/phpunit": "*",
    "symfony/http-foundation": "*",
    "symfony/browser-kit": "*",
    "symfony/http-foundation": "*"
  },

  "autoload": {
    "psr-4": {
        "YaPro\\SymfonyHttpClientExt\\": "src/"
    }
  },

  "target-dir": "",
  "minimum-stability": "dev"
}
